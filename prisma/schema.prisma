generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum User_Type {
  USER
  ADMIN
}

model User {
  id            String        @id @default(uuid())
  name          String
  email         String        @unique
  phone         String
  profile_image String
  type          User_Type     @default(USER)
  password      String
  created_at    DateTime      @default(now())
  updated_at    DateTime      @updatedAt
  User_Adress   User_Adress[]
}

model User_Adress {
  id         String @id @default(uuid())
  street     String
  street_n   String
  complement String
  district   String
  city       String
  state      String
  country    String
  zip_code   String
  user_id    String
  User       User?  @relation(fields: [user_id], references: [id])

  @@unique([user_id])
}
